{
    "name": "pressbooks/pressbooks-publisher",
    "description": "The default theme for the root site on Pressbooks installations.",
    "type": "wordpress-theme",
    "require": {
        "composer/installers": "~1.3"
    },
    "require-dev": {
        "humanmade/coding-standards": "^0.2.1"
    },
    "archive": {
      "exclude": [".github", ".tx", "bin"]
    },
    "scripts": {
      "localize": "wp-pot -o=languages/pressbooks-publisher.pot -d=pressbooks-publisher -t 'Pressbooks (Book Oven Inc.) <code@pressbooks.com>' -s 'templates/*.php'"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Pressbooks (Book Oven Inc.)",
            "email": "code@pressbooks.com"
        }
    ]
}
